#
#  PRE: edit
#

#
#  ALl of these edits are grouped.  So if one of them fails, all of
#  them are rolled back.
#
group {
	&Tmp-String-0 := "foo"
	&Tmp-String-1 := %{request.Tmp-Integer-0}  # doesn't exist
	&Tmp-String-2 := "bar"
}

if (&Tmp-String-0) {
	test_fail
}

if (&Tmp-String-1) {
	test_fail
}

if (&Tmp-String-2) {
	test_fail
}

#
#  All of these succeed individually, so all of them should succeed.
#
group {
	&Tmp-String-0 := "foo"
	&Tmp-String-1 := "yup"
	&Tmp-String-2 := "bar"
}

if (&Tmp-String-0 != "foo") {
	test_fail
}

if (&Tmp-String-1 != "yup") {
	test_fail
}

if (&Tmp-String-2 != "bar") {
	test_fail
}

success
