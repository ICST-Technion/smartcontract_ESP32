#
# PRE: if foreach
#
#  Load-Balance blocks.
#
#  Should distribute load between the modules.
#
&request += {
	&Tmp-Integer-0 = 0
	&Tmp-Integer-1 = 0

	&Tmp-Integer-2 = 0		# 0
	&Tmp-Integer-2 = 1
	&Tmp-Integer-2 = 2
	&Tmp-Integer-2 = 3
	&Tmp-Integer-2 = 4
	&Tmp-Integer-2 = 5
	&Tmp-Integer-2 = 6
	&Tmp-Integer-2 = 7
	&Tmp-Integer-2 = 8
	&Tmp-Integer-2 = 9		# 10
	&Tmp-Integer-2 = 0
	&Tmp-Integer-2 = 1
	&Tmp-Integer-2 = 2
	&Tmp-Integer-2 = 3
	&Tmp-Integer-2 = 4
	&Tmp-Integer-2 = 5
	&Tmp-Integer-2 = 6
	&Tmp-Integer-2 = 7
	&Tmp-Integer-2 = 8
	&Tmp-Integer-2 = 9		# 20
	&Tmp-Integer-2 = 0
	&Tmp-Integer-2 = 1
	&Tmp-Integer-2 = 2
	&Tmp-Integer-2 = 3
	&Tmp-Integer-2 = 4
	&Tmp-Integer-2 = 5
	&Tmp-Integer-2 = 6
	&Tmp-Integer-2 = 7
	&Tmp-Integer-2 = 8
	&Tmp-Integer-2 = 9		# 30
	&Tmp-Integer-2 = 0
	&Tmp-Integer-2 = 1
	&Tmp-Integer-2 = 2
	&Tmp-Integer-2 = 3
	&Tmp-Integer-2 = 4
	&Tmp-Integer-2 = 5
	&Tmp-Integer-2 = 6
	&Tmp-Integer-2 = 7
	&Tmp-Integer-2 = 8
	&Tmp-Integer-2 = 9		# 40
	&Tmp-Integer-2 = 0
	&Tmp-Integer-2 = 1
	&Tmp-Integer-2 = 2
	&Tmp-Integer-2 = 3
	&Tmp-Integer-2 = 4
	&Tmp-Integer-2 = 5
	&Tmp-Integer-2 = 6
	&Tmp-Integer-2 = 7
	&Tmp-Integer-2 = 8
	&Tmp-Integer-2 = 9		# 49
}

#
#  Loop 0..9
#
foreach &Tmp-Integer-2 {
	load-balance {
		group {
			&Tmp-Integer-0 += 1
			&request += {
				&Tmp-String-0 = "Picked group 1 - %{Tmp-Integer-0} time(s)"
			}
			ok
		}
		group {
			&Tmp-Integer-1 += 1
			&request += {
				&Tmp-String-1 = "Picked group 2 %{Tmp-Integer-1} Time(s)"
			}
			ok
		}
	}
}

# The chances of one group being used over another 50 times by random occurrence
# is quite small, and if this happens repeatedly, it's likely there's a bug in
# the load-balance code or random number generator.
if ((&Tmp-Integer-0 == 0) || (&Tmp-Integer-1 == 0)) {
	test_fail
}

if (&Tmp-Integer-0 + &Tmp-Integer-1 != 50) {
	test_fail
}

success
